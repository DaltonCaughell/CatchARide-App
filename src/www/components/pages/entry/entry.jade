div(style="width:100%;max-width:800px;margin-left:auto;margin-right:auto;")
	.layout-row.layout-align-center-center()
		img(src="/assets/img/sports-car.png" style="width:256px;height:256px;")
	.layout-column.layout-align-center-center()
			md-input-container(style="width:80%;")
				label() EMAIL
				input(type="text", ng-model="email", required md-maxlength="255")
			md-input-container(style="width:80%;")
				label() PASSWORD
				input(type="password", ng-model="email", required md-maxlength="255")
			md-button.layout-align-center-center(style="background-color:#B0BEC5;width:80%;")
				span() LOGIN
			md-button.layout-align-center-center(style="background-color:#607D8B;width:80%;margin-top:20px;")
				span() SIGN UP