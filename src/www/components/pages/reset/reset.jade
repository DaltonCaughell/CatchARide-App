div.cr-entry-cont.cr-bkg-color()
	.layout-row.layout-align-center-center(style="margin-bottom:0px;")
		img(src="/assets/img/sports-car.png" style="width:190px;height:190px;")
	.layout-column.layout-align-center-center(ng-keyup="$event.keyCode == 13 && reset(pass, cPass)")
		div(ng-messages="errors")
			div(ng-message="Password", style="color:red;") 
				p Password Must Be At Least 10 Characters
			div(ng-message="PasswordMatch", style="color:red;") 
				p Password And Confirm Password Must Match
			div(ng-message="internal_error", style="color:red;") 
				p Internal Error
		md-input-container(style="width:80%;margin-top:5px;")
			label() NEW PASSWORD
			input(type="password", ng-model="pass", required md-maxlength="255")
		md-input-container(style="width:80%;margin-top:5px;")
			label() CONFIRM PASSWORD
			input(type="password", ng-model="cPass", required md-maxlength="255")
		md-button.layout-align-center-center.md-primary.md-raised(style="width:80%;", ng-click="reset(pass, cPass)")
			span() RESET