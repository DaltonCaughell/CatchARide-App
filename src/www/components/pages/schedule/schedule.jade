div.cr-sch-cont.cr-bkg-color()
	div(class="layout-row layout-align-center-center cr-type-select" style="width:390px;")
		md-button.layout-row.flex.layout-align-center-center.md-raised(class="flex-50", ng-class="{'md-primary' : upcoming}", ng-click="upcoming = true;") UPCOMING
		md-button.layout-row.flex.layout-align-center-center.md-raised(class="flex-50", ng-class="{'md-primary' : !upcoming}", ng-click="upcoming = false;") PAST
	.cr-schedual-cards()
		md-card(ng-repeat="ride in rides | filter : { isOld : (!upcoming) ? true : false } | orderBy : '-time' : true")
			md-card-content(style="padding:5px 0px 5px 0px;")
				div(class="layout-row layout-align-center-center")
					div(class="flex-15", ui-sref="info({RideID : ride.ID})")
						span(ng-if="ride.UserID === user.ID")
							img(src="assets/img/sports-car.png", style="width:36px;height:36px;")
						span.glyphicon.glyphicon-user(style="font-size:36px;color:black;", ng-if="ride.UserID !== user.ID")
					div(class="flex-50", ui-sref="info({RideID : ride.ID})")
						div(class="layout-column layout-align-center-start")
							div(class="flex-100")
								span() 
									u {{ride.DateTime | date : 'MMMM d' : '-0700'}}
									u &nbsp;
									u(ng-if="!ride.isOld") {{ride.DateTime | date : '@ hh:mm a' : '-0700'}}
									u(ng-if="ride.isOld") {{ride.DateTime | date : '@ hh:mm a' : '-0700'}}
									span(ng-if="ride.UserID !== user.ID && ride.Approved === false", style="color:red;") &nbsp;(Not Approved)  
							div(class="flex-100")
								span(ng-if="ride.UserID !== user.ID") Driver: {{ride.User.Name}}
								span(ng-if="ride.UserID === user.ID") Driver: You
					div(class="flex-25")
						.layout-row.flex.layout-align-center-center()
							md-button.layout-row.flex.layout-align-center-center.md-raised.md-primary(class="flex-50", ui-sref="chat({ChatID : ride.ChatID})", style="width:100%;margin:0px 1px 0px 0px;")
								span.glyphicon.glyphicon-comment
							md-button.layout-row.flex.layout-align-center-center.md-raised.md-primary(class="flex-50", ng-click="cancel(ride.ChatID)", style="width:100%;margin:0px 0px 0px 0px;")
								span.glyphicon.glyphicon-remove
cr-footer(page="'schedule'")