back-button()
.cr-drivers-page.cr-bkg-color()
	.cr-drivers-header(style="")
		md-card.md-primary.md-hue-1()
			md-card-content(style="padding:5px 0px 5px 0px;")
				div(class="layout-column layout-align-center-center")
					div(class="flex-100", style="margin-bottom:5px;")
						span(ng-if="search.To === 'SCHOOL'") To School
						span(ng-if="search.From === 'SCHOOL'") From School
					div(class="flex-100")
						span() 
							span {{search.DateTime | date : 'MMMM d' : '-0700'}}
							span &nbsp;
							span {{search.DateTime | date : '@ hh:mm a' : '-0700'}}
	.cr-drivers-list()
		md-card(ng-repeat="ride in rides | orderBy : '-DateTime' : false")
			md-card-content()
				div(class="layout-row layout-align-center-center")
					div(class="flex-20", ui-sref="user-info({'RideID' : ride.ID, 'UserID': ride.User.ID})")
						span() {{ride.User.Name}}
					div(class="flex-30", ui-sref="user-info({'RideID' : ride.ID, 'UserID': ride.User.ID})")
						div(class="layout-column layout-align-center-start")
							div(class="flex-100")
								span() 
									span() Arrive at &nbsp;
									span() {{ride.DateTime | date : 'hh:mm a' : '-0700'}}
					div(class="flex-30", ui-sref="user-info({'RideID' : ride.ID, 'UserID': ride.User.ID})")
						span() {{ride.DistFrom | number: 1 }} Miles From You
					div(class="flex-20", style="")
						md-button.layout-row.flex.layout-align-center-center(class="flex-100",style="font-size:26px;", ng-click="join(ride.ID)")
								span.glyphicon.glyphicon-ok-circle()
		div(ng-if="!rides.length", style="width:100%;text-align:center;")
			span() Sorry, There Are No Drivers Arriving At Or Arround This Time
