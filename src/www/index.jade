doctype html
html(ng-app='mainApp', manifest="app.manifest", id="mainApp", ng-cloak)
	head
		meta(charset='utf-8')
		meta(name="viewport" content="width=device-width, initial-scale=1")
		link(rel='stylesheet', type='text/css', href='style.min.css')
		link(rel='stylesheet', type='text/css', href='bundle.min.css')
		link(rel='icon', type='image/png', href='assets/img/logo.png?v=2')
		title Catch A Ride
	body(style="background-color:#ECEFF1;")
		.app(style='width: 100%; background-color:#ECEFF1;')
			div.cr-main(style='height: 100%; width: 100%;', ui-view='')
		div(dw-loading="loadingOverlay", dw-loading-options="{text: ''}", style="width:100%;height:100%;position:fixed;top:0px;left:0px;", ng-if="crLoadingOn")
		// auto inject components
		// inject:js
		// endinject
		script(src="cordova.js")
		script(type='text/javascript').
			app.initialize();
		script(async defer src="https://maps.googleapis.com/maps/api/js?key=AIzaSyDEkqQ2jHN8jBUTxl53rPbMGyBImvtyHFk&callback=initMap")